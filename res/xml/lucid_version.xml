<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="lucid_version_screen"
    android:title="@string/lucid_version"
    settings:keywords="@string/lucid_version_keywords">

    <!-- Lucid version -->
    <Preference
        android:key="lucid_version"
        android:title="@string/lucid_version"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.LucidVersionDetailPreferenceController"/>

    <!-- Lucid Version Code -->
    <Preference
        android:key="lucid_version_code"
        android:title="@string/lucid_version_code"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.LucidVersionCodePreferenceController"/>

    <!-- Lucid Build Number -->
    <Preference
        android:key="lucid_build_number"
        android:title="@string/lucid_build_number"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.LucidBuildNumberPreferenceController"/>

</PreferenceScreen>
